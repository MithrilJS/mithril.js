{
	"name": "mithril",
	"version": "1.0.0-rc.5",
	"description": "A framework for building brilliant applications",
	"author": "Leo Horie",
	"license": "MIT",
	"main": "index.js",
	"repository": "lhorie/mithril.js",
	"scripts": {
		"dev": "node bundler/cli browser.js -o mithril.js -w",
		"build": "npm run build-browser & npm run build-min",
        "build-browser": "npm run build-browser-core & npm run build-browser-full",
        "build-min": "npm run build-min-core & npm run build-min-full",
		"build-browser-core": "node bundler/cli browser.js -o mithril.js",
		"build-browser-full": "node bundler/cli browser-full.js -o mithril-full.js",
		"build-min-core": "node bundler/cli browser.js -o mithril.min.js -m core",
		"build-min-full": "node bundler/cli browser-full.js -o mithril-full.min.js -m full",
		"lintdocs": "node docs/lint",
		"lint": "eslint .",
		"test": "node ospec/bin/ospec",
		"cover": "istanbul cover --print both ospec/bin/ospec"
	},
	"devDependencies": {
		"eslint": "^2.10.2",
		"istanbul": "^0.4.3"
	},
	"publishConfig": {
		"tag": "rewrite"
	},
	"bin": {
		"ospec": "./ospec/bin/ospec",
		"bundle": "./bundler/bin/bundle"
	}
}
